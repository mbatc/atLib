Texture2D texture0;
SamplerState sampler0;

cbuffer material
{
  float4 diffuseColour0;
}

struct psOutput
{
  float4 color : COLOR;
};

struct vsOutput
{
  float4 position : SV_Position;
  float4 color : COLOR;
  float3 normal : NORMAL;
  float2 texCoord : TEXCOORD;
};

psOutput main(vsOutput In) : SV_Target
{
  psOutput Out;
  Out.color = texture0.Sample(sampler0, In.texCoord);
  Out.color *= In.color * diffuseColour0;
  return Out;
}
